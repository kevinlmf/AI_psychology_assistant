# API Keys
# Get your Anthropic API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: OpenAI key (not required by default)
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Local model settings
# LOCAL_MODEL_PATH=/path/to/llama-model
# USE_LOCAL_MODEL=false

# Storage paths
USER_PROFILES_DIR=data/user_profiles
RLHF_DATA_DIR=data/rlhf

# Safety settings
ENABLE_CRISIS_DETECTION=true
AUTO_HUMAN_HANDOFF=true

# RLHF settings
COLLECT_FEEDBACK_FREQUENCY=3  # Every N turns
MIN_RATING=1
MAX_RATING=5
